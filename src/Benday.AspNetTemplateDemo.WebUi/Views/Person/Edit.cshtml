                <span asp-validation-for="HeightInCentimeters" class="text-danger"></span>
            </div>


        </div>
    </div>

    @Html.EditorFor(model => model.Addresses, "AddressList")

    <div class="form-group mb-3">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
